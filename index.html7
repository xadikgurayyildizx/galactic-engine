<!DOCTYPE html>
<html lang="tr">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<title>G-MODE PULSE</title>

<style>
:root{
  --pulse-speed: 3s;
}

html,body{
  margin:0;
  padding:0;
  width:100%;
  height:100%;
  background:#000;
  display:flex;
  align-items:center;
  justify-content:center;
  font-family: system-ui, -apple-system, BlinkMacSystemFont;
  overflow:hidden;
}

#pulse{
  width:160px;
  height:160px;
  border-radius:50%;
  background: radial-gradient(circle, #00ffd5 0%, #00332c 60%, transparent 70%);
  animation: breathe var(--pulse-speed) ease-in-out infinite;
}

@keyframes breathe{
  0%{ transform: scale(0.85); opacity:0.6;}
  50%{ transform: scale(1); opacity:1;}
  100%{ transform: scale(0.85); opacity:0.6;}
}

#label{
  position:fixed;
  bottom:24px;
  color:#00ffd5;
  font-size:12px;
  letter-spacing:2px;
  opacity:0.7;
}
</style>
</head>

<body>

<div id="pulse"></div>
<div id="label">THE PULSE IS US</div>

<script>
let fast = false;

document.body.addEventListener("click", ()=>{
  fast = !fast;
  document.documentElement.style.setProperty(
    "--pulse-speed",
    fast ? "1.2s" : "3s"
  );
});
</script>

</body>
</html>